#include <iostream>

using namespace std;

void leitura(int &numero){
    cout<<"Digite um numero: ";
    cin>>numero;

}

int ver(int numero, int verificacao){

    if(numero>0){
        verificacao=1;
    }

    else {
        verificacao=0;
    }

    return (verificacao);

}

int main()
{
    int numero, verificacao;

    leitura(numero);

    cout<<endl<<ver(numero,verificacao);

    return 0;
}
